<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:background="@android:color/white"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.1"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/announcement_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingRight="32dp"
                    android:layout_weight="0.8"
                    android:text="No announcements"
                    android:textSize="12dp"
                    android:textColor="#CB000000"
                    card_view:fontFamily="@font/roboto" />


                <TextView
                    android:id="@+id/announcement_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:drawableLeft="@drawable/ic_mood_black_24dp"
                    android:text="Normal service on all lines"
                    android:drawablePadding="4dp"
                    android:textColor="#000000"
                    android:textSize="10dp"
                    card_view:fontFamily="@font/roboto" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_weight="0.9">

                <View
                    android:layout_width="8dp"
                    android:id="@+id/announcement_line"
                    android:layout_gravity="right"
                    android:layout_height="match_parent"
                    android:background="@color/grey"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

